<h2><%= @category.name %></h2>
<h4>Przepisy w tej Kategorii:</h4>
<table>
  <thead>
  </thead>
  <tbody>
    <% @category.posts.each do |post| %>
    <tr>
      <td><%= link_to post.title, post_path(post) %> </td>
      <td><%= image_tag(post.post_cover.url(:thumb), alt:'Image') if post.post_cover? %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
