<div class="text-secondary-small">
  <%= render 'common/errors', model: @comment %>
  <%= form_for [@post, @comment], url: post_comments_path(@post, @comment) do |f| %>
    <p>
      <%= f.label :text, 'TREŚĆ KOMENTARZA:', class: 'text-secondary small' %>
      <br />
      <%= f.text_area :text %>
    </p>
    <p>
      <%= f.submit class: 'btn btn-light text-secondary small btn-sm' %>
    </p>
  <% end %>
</div>
