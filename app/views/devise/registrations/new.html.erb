<div align="center">
  <h2 class="text-secondary small">Zarejestruj się</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field text-secondary small">
      <%= f.label :email, "email:" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  <br />
    <div class="field text-secondary small">
      <%= f.label :password, "hasło:" %>
      <% if @minimum_password_length %>
      <em class="text-secondary small">(<%= @minimum_password_length %> znaków minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "nowe hasło" %>
    </div>
  <br />
    <div class="field text-secondary small">
      <%= f.label :password_confirmation, "potwierdź hasło:" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "nowe hasło" %>
    </div>
  <br />
    <div class="field text-secondary small">
      <%= f.label :firstname, "imię:" %><br />
      <%= f.text_field :firstname, autocomplete: "Twoje imię" %>
    </div>
  <br />
    <div class="field text-secondary small">
      <%= f.label :lastname, "nazwisko:" %><br />
      <%= f.text_field :lastname, autocomplete: "Twoje nazwisko" %>
    </div>
  <br />
    <div class=" text-secondary small">
      <label>Twój avatar:</label><br />
      <%= f.file_field :avatar, class: 'btn btn-light text-secondary small btn-sm' %>
    </div>
  <br />
    <div class="field text-secondary small">
      <%= f.label :description, "O mnie:" %><br />
      <%= f.text_area :description, autocomplete: "Napisz kilka słów o sobie" %>
    </div>
  <br />
    <div class="actions text-secondary small">
      <%= f.submit "Zarejestruj się", class: 'btn btn-outline-secondary text-secondary' %>
    </div>
  <% end %>
  <br />

  <%= render "devise/shared/links" %>
</div>
