<div class="text-secondary" align="center">
  <%- if controller_name != 'sessions' %>
    <%= link_to "Zaloguj się", new_session_path(resource_name), class: 'text-secondary' %><br />
  <% end -%>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "Zarejestruj się", new_registration_path(resource_name), class: 'text-secondary'%><br />
  <% end -%>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Zapomniałeś/aś hasła?", new_password_path(resource_name), class: 'text-secondary'%><br />
  <% end -%>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "Nie otrzymałeś/aś instukcji potwierdzenia?", new_confirmation_path(resource_name), class: 'text-secondary' %><br />
  <% end -%>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "Nie otrzymałeś/aś instukcji odblokowania?", new_unlock_path(resource_name), class: 'text-secondary' %><br />
  <% end -%>

  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= link_to "Zaloguj się z #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: 'text-secondary' %><br />
    <% end -%>
  <% end -%>
</div>
