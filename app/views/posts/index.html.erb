<h1>All posts:</h1>

<table>
  <thead>
    <tr>
      <th>Tytuł</th>
      <th>Liczba polubień</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <td><%= link_to post.title, post_path(post) %> </td>
      <td><%= post.favorites_count %> </td>
    </tr>
    <% end %>
  </tbody>
</table>
