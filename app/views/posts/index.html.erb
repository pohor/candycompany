<div>
<%= search_form_for @q do |f| %>
  <%= f.search_field :title_or_content_cont_any, class: 'form-control-sm text-secondary', placeholder: 'Szukaj po tytułach i treści' %>
  <%= f.submit 'Szukaj', class: 'btn btn-outline-secondary'%>
<% end %>
</div>
<br />
<div class="text-secondary">
<table class="table table-borderless">
  <thead>
    <tr>
      <th><%= sort_link @q, :name, "Tytuł", class: 'text-secondary'%></th>
      <th><%= sort_link @q, :time, "Czas"%></th>
      <th><%= sort_link @q, :skills, "Poziom"%></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <td><%= link_to post.title, post_path(post), class: 'text-secondary'%> </td>
      <td><%= post.time%> </td>
      <td><%= post.skills_name%> </td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
<h4 class="text-secondary" align="center">Indeks przepisów:</h4>
<br />
<br />
<%= render 'all' %>
