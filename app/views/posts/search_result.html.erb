
<div class="right text-secondary small">
    <table>
      <thead>
        <tr>
          <th></th>
          <th></th>
          <th><%= sort_link @q, :time, "CZAS"%></th>
          <th><%= sort_link @q, :skills, "POZIOM"%></th>
          <th><%= sort_link @q, :categories, "KATEGORIE"%></th>
          <th><%= sort_link @q, :ingredients, "SKŁADNIKI"%></th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
        <tr>
          <td><%= image_tag(post.post_cover.url(:mini), alt:'Image') if post.post_cover? %></td>
          <td><%= link_to post.title, post_path(post) %> </td>
          <td><%= post.time %> </td>
          <td><%= post.skills_name %> </td>
          <td><% post.categories.each do |category| %>
              <%= link_to category.name.upcase, category_path(category) %>
              <%= ' | ' %>
              <% end %>
          </td>
          <td><% post.ingredients.each do |ingredient| %>
              <%= link_to ingredient.name.upcase, ingredient_path(ingredient) %>
              <%= ' | ' %>
              <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  <br />
  <div class="digg_pagination">
  <%= will_paginate @posts, previous_label: "Poprzednie", next_label: "Następne", list_classes: %w(pagination justify-content-center), :page_links => false %>
  </div>
  <br />
  <br />
  <div align="center">
    <button type"button" class="btn btn-light text-secondary small btn-sm align-middle">
       <%= link_to 'Wróć do wszystkich postów', posts_path, class: 'text-secondary' %>
    </button>
  </div>

</div>

<div class="left">
  <%= render 'search'%>
</div>
