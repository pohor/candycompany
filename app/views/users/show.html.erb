<% provide(:page_title, @user.fullname) %>
<div class="text-secondary" align="center">
  <h6 class="small">PROFIL UŻYTKOWNIKA:</h6>
  <div class="col-sm-10">
    <%= image_tag(@user.avatar.url, alt:'Image') if @user.avatar? %>
      <br />
      <br />
    <p>
      <%=@user.firstname.upcase%>
    </p>
    <p><%= @user.fullname.upcase %></p>
    <p class="card-text text-secondary small" style="padding-right: 50px; padding-left:50px"><%= @user.description%></p>
    <div class="text-secondary small">
      POLUBIONE PRZEZ
      <% if current_user == @user %>
      CIEBIE:
      <% else %>
      TEGO UŻYTKOWNIKA:
      <% end %>
    </div>
    <div class="row">
     <% @user.hearted_posts.each do |post| %>
       <div class="col-sm-2">
         <div class="card border-light mb-3 h-100 text-center">
           <div class="card-body">
             <img class="card-img-top-centre"><%= image_tag(post.post_cover.url(:mikro), alt:'Image') if post.post_cover? %></img>
             <h6 class="card-title text-secondary small"><%= link_to post.title, post_path(post), class: 'text-secondary' %></h6>
          </div>
        </div>
      </div>
      <% end %>
    <br />
    <br />
  </div>
</div>
<div>
  <% if user_signed_in? && current_user == @user %>
    <%= link_to 'Edit profile', edit_user_registration_path(@user), class: 'text-secondary' %>
  <% end %>
</div>
